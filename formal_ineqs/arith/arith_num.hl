      let name_left = names_array.(x) and
	  name_right = names_array.(y) in
	th := gen_next_lt_thm (!th);
	Hashtbl.add th_lt_table (name_left ^ name_right) !th
    done;
done;;

for i = 1 to maximum - 1 do
