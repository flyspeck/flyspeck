     v1 - v0 = m % (w1 - w0) /\
     v2 - v0 = n % (w2 - w0) /\
     v3 - v0 = p % (w3 - w0) /\
     &0 < m /\
     &0 < n /\
     &0 < p
     ==> dihV v0 v1 v2 v3 = dihV w0 w1 w2 w3`;;

